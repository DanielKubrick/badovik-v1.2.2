/* === TELEGRAM MINI APP MOBILE STYLES === */

.telegram-app {
  min-height: 100vh;
  background-color: #f0f0f0 !important;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif !important;
  -webkit-overflow-scrolling: touch;
  overflow-scrolling: touch;
}

/* Mobile viewport optimization */
html {
  -webkit-text-size-adjust: 100% !important;
  -ms-text-size-adjust: 100% !important;
}

/* Remove tap highlights */
* {
  -webkit-tap-highlight-color: transparent !important;
  -webkit-touch-callout: none !important;
}

/* Ensure touch-friendly buttons */
button, [role="button"], .telegram-add-to-cart-btn {
  min-height: 44px !important;
  min-width: 44px !important;
}

/* Products Grid - Mobile First */
.telegram-products-grid {
  display: grid !important;
  grid-template-columns: 1fr 1fr !important;
  gap: 12px !important;
  padding: 0 16px 20px !important;
}

@media (max-width: 480px) {
  .telegram-products-grid {
    grid-template-columns: 1fr 1fr !important;
    gap: 8px !important;
    padding: 0 12px 16px !important;
  }
}

@media (max-width: 350px) {
  .telegram-products-grid {
    grid-template-columns: 1fr !important;
    gap: 12px !important;
  }
}

/* Product Cards */
.telegram-card {
  background: white !important;
  border-radius: 16px !important;
  padding: 12px !important;
  cursor: pointer !important;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08) !important;
}

@media (max-width: 480px) {
  .telegram-card {
    padding: 8px !important;
  }
}

/* Card Images */
.telegram-card-image {
  width: 100% !important;
  height: 140px !important;
  border-radius: 12px !important;
  overflow: hidden !important;
  margin-bottom: 8px !important;
  background: #f8f8f8 !important;
}

@media (max-width: 480px) {
  .telegram-card-image {
    height: 120px !important;
    margin-bottom: 6px !important;
  }
}

@media (max-width: 350px) {
  .telegram-card-image {
    height: 200px !important;
  }
}

.telegram-product-image {
  width: 100% !important;
  height: 100% !important;
  object-fit: cover !important;
}

/* Product Titles */
.telegram-product-title {
  font-size: 14px !important;
  font-weight: 500 !important;
  color: #000000 !important;
  line-height: 1.3 !important;
  margin: 0 0 12px 0 !important;
  min-height: 36px !important;
}

@media (max-width: 480px) {
  .telegram-product-title {
    font-size: 13px !important;
    min-height: 32px !important;
  }
}

/* Prices */
.telegram-price {
  font-size: 18px !important;
  font-weight: 700 !important;
  color: #000000 !important;
  margin-bottom: 6px !important;
}

@media (max-width: 480px) {
  .telegram-price {
    font-size: 16px !important;
  }
}

/* Add to Cart Buttons */
.telegram-add-to-cart-btn {
  width: 100% !important;
  padding: 12px !important;
  border: none !important;
  border-radius: 10px !important;
  background: #007aff !important;
  color: white !important;
  font-size: 16px !important;
  font-weight: 600 !important;
  cursor: pointer !important;
}

@media (max-width: 480px) {
  .telegram-add-to-cart-btn {
    padding: 10px !important;
    font-size: 14px !important;
  }
}

/* Force mobile layout for all screen sizes in development */
@media screen {
  body {
    background: #f0f0f0 !important;
  }
}

/* Input elements - prevent zoom on iOS */
input, textarea, select {
  font-size: 16px !important;
}

/* === IMPROVED PRODUCT PAGE STYLES === */

/* Line clamp utility */
.line-clamp-2 {
  display: -webkit-box !important;
  -webkit-line-clamp: 2 !important;
  -webkit-box-orient: vertical !important;
  overflow: hidden !important;
}

/* Sticky price panel */
.sticky {
  position: -webkit-sticky !important;
  position: sticky !important;
}

/* Image gallery improvements */
.aspect-square {
  aspect-ratio: 1 / 1 !important;
}

.cursor-zoom-in {
  cursor: zoom-in !important;
}

/* Accordion styles */
.accordion-button {
  transition: background-color 0.2s ease !important;
}

.accordion-button:hover {
  background-color: #f9fafb !important;
}

/* Modal backdrop */
.modal-backdrop {
  backdrop-filter: blur(4px) !important;
}

/* Trust signals improvements */
.trust-signals {
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1) !important;
}

/* Breadcrumb improvements */
.breadcrumb-link {
  transition: color 0.2s ease !important;
}

/* Price formatting */
.price-display {
  font-variant-numeric: tabular-nums !important;
  letter-spacing: -0.5px !important;
}

/* Quantity selector */
.quantity-selector {
  user-select: none !important;
}

.quantity-button {
  min-width: 44px !important;
  min-height: 44px !important;
  touch-action: manipulation !important;
}

/* Smooth scrolling for thumbnails */
.thumbnails-container {
  scrollbar-width: none !important;
  -ms-overflow-style: none !important;
}

.thumbnails-container::-webkit-scrollbar {
  display: none !important;
}

/* Stock indicator */
.stock-indicator {
  animation: pulse-green 2s infinite !important;
}

@keyframes pulse-green {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.7; }
}

/* Trust badge hover effects */
.trust-badge {
  transition: transform 0.2s ease !important;
}

.trust-badge:hover {
  transform: translateY(-1px) !important;
}

/* Modal animations */
.modal-enter {
  animation: modalFadeIn 0.3s ease-out !important;
}

.modal-exit {
  animation: modalFadeOut 0.2s ease-in !important;
}

@keyframes modalFadeIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes modalFadeOut {
  from {
    opacity: 1;
    transform: translateY(0);
  }
  to {
    opacity: 0;
    transform: translateY(20px);
  }
}

/* Image zoom modal */
.image-modal {
  backdrop-filter: blur(8px) !important;
}

.image-modal img {
  max-height: 80vh !important;
  touch-action: pan-x pan-y pinch-zoom !important;
}

/* Improved button states */
.button-primary {
  transition: all 0.2s ease !important;
  transform: translateZ(0) !important;
}

.button-primary:active {
  transform: scale(0.98) !important;
}

/* Typography improvements */
.product-title {
  line-height: 1.25 !important;
  word-wrap: break-word !important;
}

.brand-text {
  letter-spacing: 0.025em !important;
  font-weight: 600 !important;
}

/* Chip/tag styles */
.chip {
  white-space: nowrap !important;
  display: inline-flex !important;
  align-items: center !important;
  font-weight: 500 !important;
}

/* Better spacing for mobile */
@media (max-width: 480px) {
  .product-header {
    padding: 0 !important;
  }
  
  .sticky-price-panel {
    padding: 12px 16px !important;
  }
  
  .product-image {
    border-radius: 12px !important;
  }
  
  .accordion-section {
    margin-bottom: 8px !important;
  }
  
  .trust-signals {
    padding: 16px 12px !important;
  }
}

/* Improved contrast for accessibility */
.text-muted {
  color: #6b7280 !important;
}

.text-brand {
  color: #374151 !important;
}

/* Loading skeleton improvements */
.skeleton-pulse {
  animation: skeleton-loading 1.2s ease-in-out infinite !important;
}

@keyframes skeleton-loading {
  0% {
    background-position: -200px 0;
  }
  100% {
    background-position: calc(200px + 100%) 0;
  }
}

